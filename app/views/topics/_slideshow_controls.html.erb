<div id="slideshow-controls">
  <div class="wrapper">
    <div id="slideshow-previous-button">
      &nbsp;<strong><%= link_to_previous_in_slideshow %></strong>
    </div>
    <div id="slideshow-next-button">
      <strong><%= link_to_next_in_slideshow %></strong>&nbsp;
    </div>
    <div id="slideshow-middle">
      <%=t 'topics.slideshow_controls.current',
           :slideshow_total => slideshow.number_of_total(url_without_extras(request.url)),
           :total => slideshow.total %><br />
      <%= link_to_stop_slideshow %> | <%= link_to_results %>
    </div>
  </div>
</div>
